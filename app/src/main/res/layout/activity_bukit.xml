<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgbukit"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".bukit">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bukit"
            android:background="@color/teal_700"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="348dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:onClick="dessagara"
            app:cardCornerRadius="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/sagara1" />

                <LinearLayout
                    android:layout_width="219dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="217dp"
                        android:layout_height="37dp"
                        android:paddingTop="10dp"
                        android:text="Bukit Hud / Sagara View"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="63dp"
                        android:text="Deskripsi, Harga Tiket, Fasilitas dan Lokasi" />

                </LinearLayout>

            </TableRow>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="348dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:onClick="despentuluindah"
            app:cardCornerRadius="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/indah1" />

                <LinearLayout
                    android:layout_width="217dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="216dp"
                        android:layout_height="37dp"
                        android:paddingTop="10dp"
                        android:text="Bukit Pentulu Indah"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="217dp"
                        android:layout_height="63dp"
                        android:text="Deskripsi, Harga Tiket, Fasilitas dan Lokasi" />
                </LinearLayout>
            </TableRow>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="348dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:onClick="desbanda"
            app:cardCornerRadius="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/banda1" />

                <LinearLayout
                    android:layout_width="237dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="216dp"
                        android:layout_height="37dp"
                        android:paddingTop="10dp"
                        android:text="Bukit Banda"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="216dp"
                        android:layout_height="63dp"
                        android:text="Deskripsi, Harga Tiket, Fasilitas dan Lokasi" />
                </LinearLayout>
            </TableRow>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="348dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:onClick="deslangit"
            app:cardCornerRadius="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/langit1" />

                <LinearLayout
                    android:layout_width="237dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="215dp"
                        android:layout_height="37dp"
                        android:paddingTop="10dp"
                        android:text="Bukit Langit"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="212dp"
                        android:layout_height="56dp"
                        android:text="Deskripsi, Harga Tiket, Fasilitas dan Lokasi" />

                </LinearLayout>

            </TableRow>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="348dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:onClick="desjerit"
            app:cardCornerRadius="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/jerit1" />

                <LinearLayout
                    android:layout_width="237dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="215dp"
                        android:layout_height="37dp"
                        android:paddingTop="10dp"
                        android:text="Bukit Jerit"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="215dp"
                        android:layout_height="63dp"
                        android:text="Deskripsi, Harga Tiket, Fasilitas dan Lokasi" />
                </LinearLayout>

            </TableRow>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBack"
        android:layout_width="71dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom|left"
        android:layout_marginStart="22dp"
        android:layout_marginTop="650dp"
        android:onClick="fabback"
        android:src="@drawable/ic_arrow_back_black_24dp"
        app:borderWidth="0dp"
        app:elevation="5dp" />

</RelativeLayout>